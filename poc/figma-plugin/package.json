{
  "name": "design-system-admin-figma-plugin-poc",
  "version": "0.1.0",
  "description": "PoC Figma plugin for Design System Admin - validates API capabilities",
  "scripts": {
    "build": "npm run build:main && npm run build:ui",
    "build:main": "esbuild src/main.ts --bundle --outfile=dist/main.js --target=es2017",
    "build:ui": "esbuild src/ui.tsx --bundle --outfile=dist/ui.js --target=es2017 --loader:.tsx=tsx && npm run build:html",
    "build:html": "node scripts/build-html.js",
    "watch": "npm run watch:main & npm run watch:ui",
    "watch:main": "esbuild src/main.ts --bundle --outfile=dist/main.js --target=es2017 --watch",
    "watch:ui": "esbuild src/ui.tsx --bundle --outfile=dist/ui.js --target=es2017 --loader:.tsx=tsx --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.96.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}


